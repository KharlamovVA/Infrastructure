[Unit]
Description=Run backend

[Service]
User={{ ssb_service_user }}
Environment="REPORT_PATH=/var/www-data/htdocs/"
Environment="LOG_PATH=/logs/"
StandardOutput=append:{{ log_path }}/out.log
Restart=always
ExecStart=java -jar -Dserver.port=9000 {{ art_path }}/sausage-store-{{ version }}.jar
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target